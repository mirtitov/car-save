    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const calculateBtn = document.getElementById('calculateBtn');
            const calculatedPrice = document.getElementById('calculatedPrice');
            const calculationDetails = document.getElementById('calculationDetails');
            
            // Обработчики для выбора тарифа
            document.querySelectorAll('#carsave-calculator-wrapper .tariff-item').forEach(item => {
                const radio = item.querySelector('input[type="radio"]');
                
                // Обработчик клика по всей строке тарифа
                item.addEventListener('click', function(e) {
                    if (e.target.tagName !== 'INPUT') {
                        radio.checked = true;
                        // Создаем событие change для радио-кнопки
                        const event = new Event('change');
                        radio.dispatchEvent(event);
                    }
                });
                
                // Обработчик изменения радио-кнопки
                radio.addEventListener('change', function() {
                    // Обновляем визуальное состояние всех тарифов
                    document.querySelectorAll('#carsave-calculator-wrapper .tariff-item').forEach(tariff => {
                        tariff.classList.remove('selected');
                    });
                    
                    // Выделяем выбранный тариф
                    item.classList.add('selected');
                });
            });
            
            // Инициализация выбранного тарифа
            document.querySelector('#carsave-calculator-wrapper .tariff-item input:checked').dispatchEvent(new Event('change'));
            
            function calculatePrice() {
                const year = parseInt(document.getElementById('carYear').value) || 2020;
                const mileage = parseInt(document.getElementById('carMileage').value) || 50000;
                const carPrice = parseInt(document.getElementById('carPrice').value) || 2000000;
                const selectedTariff = parseFloat(document.querySelector('#carsave-calculator-wrapper input[name="tariff"]:checked').value);
                
                // Базовая ставка в зависимости от стоимости автомобиля
                let baseRate;
                let rateDescription;
                
                if (carPrice <= 5000000) {
                    baseRate = 0.01; // 1%
                    rateDescription = "1% (авто до 5 млн ₽)";
                } else if (carPrice <= 10000000) {
                    baseRate = 0.013; // 1.3%
                    rateDescription = "1.3% (авто 5-10 млн ₽)";
                } else if (carPrice <= 20000000) {
                    baseRate = 0.011; // 1.1%
                    rateDescription = "1.1% (авто 10-20 млн ₽)";
                } else {
                    baseRate = 0.012; // 1.2%
                    rateDescription = "1.2% (авто свыше 20 млн ₽)";
                }
                
                // Базовая цена = стоимость авто * базовая ставка
                let basePrice = carPrice * baseRate;
                
                // Коэффициент возраста
                const currentYear = new Date().getFullYear();
                const carAge = currentYear - year;
                let ageCoefficient = 1;
                let ageDescription = "";
                
                if (carAge <= 3) {
                    ageCoefficient = 1;
                    ageDescription = "1.0 (до 3 лет)";
                } else if (carAge <= 7) {
                    ageCoefficient = 1.3;
                    ageDescription = "1.3 (3-7 лет)";
                } else {
                    ageCoefficient = 1.6;
                    ageDescription = "1.6 (старше 7 лет)";
                }
                
                // Коэффициент пробега
                let mileageCoefficient = 1;
                let mileageDescription = "";
                
                if (mileage <= 50000) {
                    mileageCoefficient = 1;
                    mileageDescription = "1.0 (до 50 тыс. км)";
                } else if (mileage <= 100000) {
                    mileageCoefficient = 1.2;
                    mileageDescription = "1.2 (50-100 тыс. км)";
                } else {
                    mileageCoefficient = 1.4;
                    mileageDescription = "1.4 (свыше 100 тыс. км)";
                }
                
                // Коэффициент тарифа
                let tariffDescription = "";
                if (selectedTariff === 1) {
                    tariffDescription = "1.0 (Старт)";
                } else if (selectedTariff === 1.5) {
                    tariffDescription = "1.5 (Комфорт)";
                } else {
                    tariffDescription = "2.0 (Премиум)";
                }
                
                // Итоговая цена
                const finalPrice = Math.round(basePrice * ageCoefficient * mileageCoefficient * selectedTariff);
                
                // Формируем детали расчета
                calculationDetails.innerHTML = `
                    <div><strong>Детали расчета:</strong></div>
                    <div>Базовая ставка: ${rateDescription}</div>
                    <div>Коэффициент возраста: ${ageDescription}</div>
                    <div>Коэффициент пробега: ${mileageDescription}</div>
                    <div>Коэффициент тарифа: ${tariffDescription}</div>
                `;
                
                return finalPrice;
            }

            calculateBtn.addEventListener('click', function() {
                const price = calculatePrice();
                calculatedPrice.textContent = price.toLocaleString('ru-RU') + ' ₽';
                
                // Анимация появления результата
                calculationDetails.style.animation = 'fadeIn 0.5s ease';
            });
        });
    </script>
</body>
</html>

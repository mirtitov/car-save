                <div class="input-group">
                    <label for="carYear">Год выпуска:</label>
                    <input type="number" id="carYear" min="1990" max="2024" placeholder="2020">
                </div>
                
                <div class="input-group">
                    <label for="carMileage">Пробег (км):</label>
                    <input type="number" id="carMileage" placeholder="50000">
                </div>
                
                <div class="input-group">
                    <label for="carPrice">Примерная рыночная стоимость автомобиля (₽):</label>
                    <input type="number" id="carPrice" placeholder="2000000">
                </div>
                
                <div class="input-group">
                    <label>Тариф гарантии:</label>
                    <div class="tariff-options">
                        <div class="tariff-item" data-value="1">

    <div id="carsave-calculator-wrapper">
        <!-- Блок калькулятора -->
        <section class="calculator">
            <!-- Левая колонка: Форма ввода -->
            <div class="left-column">
                <h2>Рассчитайте стоимость гарантии</h2>
                
                <div class="input-group">
